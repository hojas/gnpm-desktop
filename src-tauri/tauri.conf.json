{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "gnpm-desktop",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [
          {
            "name": "node",
            "cmd": "node",
            "args": [
              {
                "validator": ".+"
              }
            ]
          },
          {
            "name": "npm-version",
            "cmd": "npm",
            "args": [
              "-g",
              "--version"
            ]
          },
          {
            "name": "npm-list",
            "cmd": "npm",
            "args": [
              "-g",
              "list"
            ]
          },
          {
            "name": "npm",
            "cmd": "npm",
            "args": [
              "-g",
              {
                "validator": ".+"
              },
              {
                "validator": ".+"
              }
            ]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.hojas.gnpm-desktop",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "gnpm-desktop",
        "width": 800,
        "height": 600
      }
    ]
  }
}
